{
  "version": 1,
  "_comment": "SafeSkillAgent exec-approvals config. Deploy to ~/.openclaw/exec-approvals.json",
  "defaults": {
    "security": "allowlist",
    "ask": "on-miss",
    "askFallback": "deny",
    "autoAllowSkills": false
  },
  "agents": {
    "main": {
      "security": "allowlist",
      "ask": "on-miss",
      "askFallback": "deny",
      "autoAllowSkills": false,
      "allowlist": [
        {
          "pattern": "/usr/bin/ls",
          "_note": "List directory contents"
        },
        {
          "pattern": "/bin/ls",
          "_note": "List directory contents (alt path)"
        },
        {
          "pattern": "/usr/bin/cat",
          "_note": "Read file contents"
        },
        {
          "pattern": "/bin/cat",
          "_note": "Read file contents (alt path)"
        },
        {
          "pattern": "/usr/bin/head",
          "_note": "Read first lines"
        },
        {
          "pattern": "/usr/bin/tail",
          "_note": "Read last lines"
        },
        {
          "pattern": "/usr/bin/wc",
          "_note": "Word/line/byte count"
        },
        {
          "pattern": "/usr/bin/sort",
          "_note": "Sort lines"
        },
        {
          "pattern": "/usr/bin/uniq",
          "_note": "Deduplicate lines"
        },
        {
          "pattern": "/usr/bin/grep",
          "_note": "Search text"
        },
        {
          "pattern": "/usr/bin/find",
          "_note": "Find files"
        },
        {
          "pattern": "/usr/bin/which",
          "_note": "Locate binary"
        },
        {
          "pattern": "/usr/bin/whoami",
          "_note": "Current user"
        },
        {
          "pattern": "/usr/bin/id",
          "_note": "User identity"
        },
        {
          "pattern": "/usr/bin/hostname",
          "_note": "System hostname"
        },
        {
          "pattern": "/usr/bin/uname",
          "_note": "System info"
        },
        {
          "pattern": "/usr/bin/date",
          "_note": "Date/time"
        },
        {
          "pattern": "/usr/bin/pwd",
          "_note": "Print working directory"
        },
        {
          "pattern": "/usr/bin/env",
          "_note": "Environment info"
        },
        {
          "pattern": "/usr/bin/printenv",
          "_note": "Print environment"
        },
        {
          "pattern": "/usr/bin/echo",
          "_note": "Echo text"
        },
        {
          "pattern": "/bin/echo",
          "_note": "Echo text (alt path)"
        },
        {
          "pattern": "/usr/bin/printf",
          "_note": "Format and print"
        },
        {
          "pattern": "/usr/bin/diff",
          "_note": "Compare files"
        },
        {
          "pattern": "/usr/bin/file",
          "_note": "Determine file type"
        },
        {
          "pattern": "/usr/bin/stat",
          "_note": "File status"
        },
        {
          "pattern": "/usr/bin/du",
          "_note": "Disk usage"
        },
        {
          "pattern": "/usr/bin/df",
          "_note": "Filesystem space"
        },
        {
          "pattern": "/usr/bin/dirname",
          "_note": "Directory component"
        },
        {
          "pattern": "/usr/bin/basename",
          "_note": "Filename component"
        },
        {
          "pattern": "/usr/bin/realpath",
          "_note": "Resolve path"
        },
        {
          "pattern": "/usr/bin/readlink",
          "_note": "Resolve symlink"
        },
        {
          "pattern": "/usr/bin/tr",
          "_note": "Translate characters"
        },
        {
          "pattern": "/usr/bin/cut",
          "_note": "Extract columns"
        },
        {
          "pattern": "/usr/bin/tee",
          "_note": "Pipe tee"
        },
        {
          "pattern": "/usr/bin/awk",
          "_note": "Text processing"
        },
        {
          "pattern": "/usr/bin/sed",
          "_note": "Stream editor"
        },
        {
          "pattern": "/usr/bin/xargs",
          "_note": "Build arguments"
        },
        {
          "pattern": "/usr/bin/test",
          "_note": "Condition test"
        },
        {
          "pattern": "/usr/bin/true",
          "_note": "Return true"
        },
        {
          "pattern": "/usr/bin/false",
          "_note": "Return false"
        },
        {
          "pattern": "/usr/bin/touch",
          "_note": "Create/update file timestamp"
        },
        {
          "pattern": "/usr/bin/mkdir",
          "_note": "Create directory"
        },
        {
          "pattern": "/bin/mkdir",
          "_note": "Create directory (alt path)"
        },
        {
          "pattern": "/usr/bin/cp",
          "_note": "Copy files"
        },
        {
          "pattern": "/bin/cp",
          "_note": "Copy files (alt path)"
        },
        {
          "pattern": "/usr/bin/mv",
          "_note": "Move/rename files"
        },
        {
          "pattern": "/bin/mv",
          "_note": "Move/rename files (alt path)"
        },
        {
          "pattern": "/usr/bin/git",
          "_note": "Version control"
        },
        {
          "pattern": "/usr/local/bin/git",
          "_note": "Version control (homebrew)"
        },
        {
          "pattern": "/opt/homebrew/bin/git",
          "_note": "Version control (apple silicon homebrew)"
        },
        {
          "pattern": "/usr/bin/python3",
          "_note": "Python interpreter"
        },
        {
          "pattern": "/usr/local/bin/python3*",
          "_note": "Python (homebrew)"
        },
        {
          "pattern": "/opt/homebrew/bin/python3*",
          "_note": "Python (apple silicon homebrew)"
        },
        {
          "pattern": "/usr/local/bin/node",
          "_note": "Node.js"
        },
        {
          "pattern": "/opt/homebrew/bin/node",
          "_note": "Node.js (apple silicon)"
        },
        {
          "pattern": "/usr/local/bin/npm",
          "_note": "NPM"
        },
        {
          "pattern": "/opt/homebrew/bin/npm",
          "_note": "NPM (apple silicon)"
        },
        {
          "pattern": "/usr/local/bin/npx",
          "_note": "NPX"
        },
        {
          "pattern": "/opt/homebrew/bin/npx",
          "_note": "NPX (apple silicon)"
        },
        {
          "pattern": "/usr/local/bin/pip3",
          "_note": "Python package manager"
        },
        {
          "pattern": "/usr/local/bin/safeskill",
          "_note": "SafeSkillAgent CLI"
        },
        {
          "pattern": "/opt/safeskill/venv/bin/safeskill",
          "_note": "SafeSkillAgent CLI (venv)"
        },
        {
          "pattern": "/usr/local/bin/jq",
          "_note": "JSON processor"
        },
        {
          "pattern": "/opt/homebrew/bin/jq",
          "_note": "JSON processor (apple silicon)"
        },
        {
          "pattern": "/usr/bin/curl",
          "_note": "URL transfer (needed for SafeSkill socket comms)"
        },
        {
          "pattern": "/opt/homebrew/bin/curl",
          "_note": "URL transfer (homebrew)"
        },
        {
          "pattern": "/usr/bin/tar",
          "_note": "Archive tool"
        },
        {
          "pattern": "/usr/bin/gzip",
          "_note": "Compression"
        },
        {
          "pattern": "/usr/bin/unzip",
          "_note": "Decompression"
        },
        {
          "pattern": "/usr/bin/sha256sum",
          "_note": "SHA-256 checksum"
        },
        {
          "pattern": "/usr/bin/md5sum",
          "_note": "MD5 checksum"
        }
      ]
    }
  }
}
